{
  "kind": "collectionType",
  "collectionName": "jobs",
  "info": {
    "singularName": "job",
    "pluralName": "jobs",
    "displayName": "Job",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "logo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "companyImage": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "companyName": {
      "type": "string",
      "required": true
    },
    "reported_by": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user",
      "inversedBy": "reported_jobs"
    },
    "companyAddress": {
      "displayName": "companyAddress",
      "type": "component",
      "repeatable": false,
      "component": "job.company-address"
    },
    "About": {
      "type": "text",
      "minLength": 3
    },
    "position": {
      "type": "string",
      "minLength": 2,
      "required": true
    },
    "jobLocation": {
      "type": "string",
      "minLength": 2,
      "required": true
    },
    "jobType": {
      "type": "enumeration",
      "enum": [
        "partTime",
        "fullTime",
        "casual",
        "contract",
        "other"
      ],
      "required": true
    },
    "other": {
      "type": "string",
      "required": false,
      "minLength": 2
    },
    "SalaryPeriod": {
      "type": "enumeration",
      "enum": [
        "per-week",
        "fortnightly",
        "per-month",
        "per-annum"
      ],
      "required": true
    },
    "jobDescription": {
      "type": "text",
      "minLength": 2
    }
  }
}
