{
  "kind": "collectionType",
  "collectionName": "jobs",
  "info": {
    "singularName": "job",
    "pluralName": "jobs",
    "displayName": "Job",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "logo": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "companyImage": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "videos",
        "files"
      ]
    },
    "companyName": {
      "type": "string",
      "required": true
    },
    "reported_by": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user",
      "inversedBy": "reported_jobs"
    },
    "companyAddress": {
      "displayName": "companyAddress",
      "type": "component",
      "repeatable": false,
      "component": "job.company-address",
      "required": true
    },
    "aboutTheCompany": {
      "type": "text"
    },
    "position": {
      "type": "string",
      "minLength": 2,
      "required": true
    },
    "jobLocation": {
      "type": "string",
      "minLength": 2,
      "required": true
    },
    "jobType": {
      "type": "string",
      "required": true,
      "minLength": 1
    },
    "salaryPeriod": {
      "type": "enumeration",
      "enum": [
        "Per Week",
        "Fortnightly",
        "Per Month",
        "Per Annum"
      ],
      "required": true
    },
    "jobDescription": {
      "type": "text"
    },
    "salaryAmount": {
      "type": "integer",
      "min": 0
    }
  }
}
