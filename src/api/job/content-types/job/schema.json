{
  "kind": "collectionType",
  "collectionName": "jobs",
  "info": {
    "singularName": "job",
    "pluralName": "jobs",
    "displayName": "Job",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "logo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "companyImage": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "companyName": {
      "type": "string",
      "required": true
    },
    "reported_by": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user",
      "inversedBy": "reported_jobs"
    },
    "companyAddress": {
      "displayName": "companyAddress",
      "type": "component",
      "repeatable": false,
      "component": "job.company-address"
    },
    "aboutTheCompany": {
      "type": "text",
      "minLength": 3
    },
    "position": {
      "type": "string",
      "minLength": 2,
      "required": true
    },
    "jobLocation": {
      "type": "string",
      "minLength": 2,
      "required": true
    },
    "jobType": {
      "type": "enumeration",
      "enum": [
        "Part Time",
        "Full Time",
        "Casual",
        "Contract",
        "Other"
      ],
      "required": true
    },
    "other": {
      "type": "string",
      "required": false,
      "minLength": 2
    },
    "salaryPeriod": {
      "type": "enumeration",
      "enum": [
        "Per Week",
        "Fortnightly",
        "Per Month",
        "Per Annum"
      ],
      "required": true
    },
    "jobDescription": {
      "type": "text",
      "minLength": 2
    }
  }
}
